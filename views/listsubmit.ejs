<% layout('layout') -%>

<div class="custom-container" ng-controller="PostSubmitFormCtrl">
	<div class="page-header">
		<h3>Add New Blog Post Form</h3>
	</div>
	<form method="POST" action="/posts/submit" class="form-horizontal" name="contactForm" novalidate>
		<input type="hidden" name="_csrf" value="<%= _csrf %>"/>
		<div class="form-group">
			<label for="title" class="col-sm-2 control-label">Title</label>
			<div class="col-sm-8">
				<input type="text" name="title" id="title" autofocus="autofocus" class="form-control" required ng-model="title"/>
			</div>
		</div>
		<div class="form-group">
			<label for="email" class="col-sm-2 control-label">Email</label>
			<div class="col-sm-8">
				<input type="email" name="email" id="email" class="form-control" required ng-model="email"/>
			</div>
		</div>
		<div class="form-group">
			<label for="description" class="col-sm-2 control-label">Description</label>
			<div class="col-sm-8">
				<textarea name="description" id="message" rows="7" class="form-control" required ng-model="description"></textarea>
			</div>
		</div>
		<div class="form-group">
			<div class="col-sm-offset-2 col-sm-8">
				<button type="submit" class="btn btn-primary" ng-disabled="contactForm.$invalid">
					<i class="fa fa-envelope"></i> Send message
				</button>
			</div>
		</div>
	</form>
</div>